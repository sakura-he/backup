{
	"compilerOptions": {
		"jsx": "preserve",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"baseUrl": "./",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowJs": true,

		"lib": [
			"ESNext",
			"DOM"
		],
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"./auto-imports.d.ts",
		"./components.d.ts",
		"./module.d.ts",
		"src/layout/components/Menu/index.jsx"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}